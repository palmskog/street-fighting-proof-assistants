def binary_search(a, key) {
  low = 0;
  high = len(a) - 1;
  while (low <= high) {
    mid = low + ((high - low) / 2);
    mid_val = a[mid];	    
    if (mid_val < key) {
      low = mid + 1;
    } else {
      if (mid_val > key) {
      	high = mid - 1;
      } else {
        return mid;
      }
    }
  }		
  return -low - 1;
}

n = read_int();
k = read_int();

if (n < 0) {
   n = -n;
}

a = alloc(n, 0);
i = 0;
while (i < n) {
  a[i] = n - i;
  i = i + 1;
}

result = binary_search(a, k);

return result;
